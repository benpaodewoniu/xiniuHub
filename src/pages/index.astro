---
import Layout from '../layouts/Layout.astro';
import links from '../data/links.json';
import site from '../data/site.json';
---

<Layout>
  <div class="container">
    <header>
      <h1>{site.title}</h1>
      <p class="subtitle">{site.subtitle}</p>
      <div class="search-box">
        <input
          type="text"
          id="search"
          placeholder="搜索网站..."
          autocomplete="off"
        />
      </div>
    </header>

    <main>
      {links.map((group) => (
        <section class="category" data-category={group.category}>
          <h2>
            <span class="icon">{group.icon}</span>
            {group.category}
          </h2>
          <div class="grid">
            {group.items.map((item) => (
              <a
                href={item.url}
                class="card"
                target="_blank"
                rel="noopener noreferrer"
                data-name={item.name.toLowerCase()}
                data-desc={item.desc.toLowerCase()}
              >
                <div class="card-icon">
                  {item.name.charAt(0)}
                </div>
                <div class="card-info">
                  <span class="card-name">{item.name}</span>
                  <span class="card-desc">{item.desc}</span>
                </div>
              </a>
            ))}
          </div>
        </section>
      ))}
      <p class="no-result" id="no-result">没有找到匹配的网站</p>
    </main>

    <footer>
      <p>{site.footer}</p>
    </footer>
  </div>
</Layout>

<script>
  const input = document.getElementById('search') as HTMLInputElement;
  const categories = document.querySelectorAll('.category');
  const noResult = document.getElementById('no-result')!;

  input.addEventListener('input', () => {
    const query = input.value.toLowerCase().trim();
    let hasResult = false;

    categories.forEach((section) => {
      const cards = section.querySelectorAll('.card');
      let visibleCount = 0;

      cards.forEach((card) => {
        const el = card as HTMLElement;
        const name = el.dataset.name || '';
        const desc = el.dataset.desc || '';
        const match = !query || name.includes(query) || desc.includes(query);
        el.style.display = match ? '' : 'none';
        if (match) visibleCount++;
      });

      (section as HTMLElement).style.display = visibleCount > 0 ? '' : 'none';
      if (visibleCount > 0) hasResult = true;
    });

    noResult.style.display = hasResult ? 'none' : 'block';
  });
</script>

<style>
  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .subtitle {
    color: var(--text-secondary);
    margin-top: 0.4rem;
    font-size: 0.95rem;
  }

  .search-box {
    margin-top: 1.5rem;
    max-width: 400px;
    margin-inline: auto;
  }

  .search-box input {
    width: 100%;
    padding: 0.7rem 1rem;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    background: var(--surface);
    color: var(--text);
    font-size: 0.95rem;
    outline: none;
    transition: border-color 0.2s;
  }

  .search-box input::placeholder {
    color: var(--text-secondary);
  }

  .search-box input:focus {
    border-color: var(--accent);
  }

  main {
    flex: 1;
  }

  .category {
    margin-bottom: 2rem;
  }

  .category h2 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon {
    font-size: 1.2rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 0.75rem;
  }

  .card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.8rem 1rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    transition: background 0.15s, border-color 0.15s;
  }

  .card:hover {
    background: var(--surface-hover);
    border-color: #333;
  }

  .card-icon {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: var(--accent);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
    flex-shrink: 0;
  }

  .card-info {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .card-name {
    font-weight: 600;
    font-size: 0.9rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-desc {
    font-size: 0.78rem;
    color: var(--text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .no-result {
    display: none;
    text-align: center;
    color: var(--text-secondary);
    padding: 3rem 0;
  }

  footer {
    text-align: center;
    padding: 2rem 0 0.5rem;
    color: var(--text-secondary);
    font-size: 0.8rem;
  }

  @media (max-width: 640px) {
    .grid {
      grid-template-columns: 1fr;
    }

    h1 {
      font-size: 1.5rem;
    }
  }
</style>
